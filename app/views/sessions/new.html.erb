
<%= video_tag "run.mp4", :autoplay => true, :loop => true, :class => "myVideo" %>

<div class='login-box'>
	<p class="header">Login</p>
	<div class="login">
		<%= form_tag (login_path) do %>
			<%= email_field_tag :email, nil, placeholder: 'Email', :class => "entry" %>
			<%= password_field_tag :password, nil, placeholder: "Password", :class => "entry" %>
			<%= submit_tag "login", :class => "button" %>
		<% end %>
	</div>
</div>

<div class="title">
	<p>The Runner's Blog</p>
</div>