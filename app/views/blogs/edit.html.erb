<%= image_tag "boardwalk.jpg", :class => "style-image" %>

<p>Edit new blog</p>

<div class='form-box'>
	<%= form_for @blog do |f| %>
		<div><%= f.text_field :title %></div>
		<div><%= f.text_field :category %></div>
		<div><%= f.text_area :content %></div>
		<div><%= f.submit %></div>
	<% end %>
</div>