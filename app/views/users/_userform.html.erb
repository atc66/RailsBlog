<div class='form-box'>
	<%= form_for @user do |f| %>
		<%= f.text_field :username, placeholder: 'Username', :class => "entry" %> <br>
		<%= f.text_field :email, placeholder: 'Email', :class => "entry" %><br>
		<%= f.password_field :password, placeholder: 'Password', :class => "entry" %>
		<%= f.submit 'Submit', :class => 'button' %>
	<% end %>
</div>