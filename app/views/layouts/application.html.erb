<!DOCTYPE html>
<html>
  <head>
    <title>AndrewsBlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	  <nav class='navbar'>

          <% if logged_in? %>
            <li><%= link_to 'Log out', '/logout', {method: 'post'} %></li>
            <li><a href='/blogs/new'>Write a New Blog</a></li>
          <% end %>

          <% if !logged_in? %>
            <li><a href='/login'>Login</a></li> 
          <% end %>

      <li><a href='/'>Home</a></li> 
      <li><a href='/blogs'>Blogs</a></li>
      <li><a href='/users'>Users</a></li>
      <li><a href='/users/new'>Create a New User</a></li>
      
    </nav>

  	 <%= flash[:message] if flash[:message] %>
    <%= yield %>
  </body>
</html>
